<?xml version="1.0"?>
<robot>
    <!-- Defining colors used in the robot -->
    <material name="Black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="Red">
        <color rgba="0.8 0 0 1"/>
    </material>

    <material name="White">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="Blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="DarkGray">
        <color rgba="${50/255} ${50/255} ${50/255} 1"/>
    </material>
</robot>